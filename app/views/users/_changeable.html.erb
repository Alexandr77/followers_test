<div id="user_follower_changeable_<%= user.id %>" class='col col-sm'>
  <div class="row">
    <div class="col"><%= user.followers.size %></div>
    <% if user.is_followed_by?(current_user) %>
      <%= render partial: 'followers/delete_form',
        locals: { follower: user.follower(current_user) }%>
    <% else %>
      <%= render partial: 'followers/new_form', locals: { user: user }%>
    <% end %>
  </div>
</div>
